# 開発モード (True/False)
DEBUG=True

# 実行環境 (production / development など)
ENV=development

# Djangoの秘密鍵
SECRET_KEY=your-django-secret-key-here

# メール設定 (例: Gmail用アカウント)
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 設定
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name

# データベース接続URL (例: PostgreSQL)
DATABASE_URL=postgres://username:password@hostname:5432/dbname

# Google OAuth2 認証キー
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-google-client-id
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-google-client-secret

# Twitter API 認証キー
SOCIAL_AUTH_TWITTER_KEY=your-twitter-api-key
SOCIAL_AUTH_TWITTER_SECRET=your-twitter-api-secret